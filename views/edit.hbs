<form action="/records/{{ todo._id }}?_method=PUT" method="POST" style="display: inline;">
    <div class="input-group">
        <div class="input-group-text">
            <input type="checkbox" class="form-check-input mt-0" name="isDone" {{#if record.isDone }} checked {{/if}}>
        </div>
        <input class="form-control" type="text" placeholder="name" name="name" value="{{ record.name }}">
        <input class="form-control" type="text" placeholder="name" name="name" value="{{ record.amount }}">
        <button class="btn btn-success" type="submit">儲存</button>
    </div>
</form>