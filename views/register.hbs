<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mt-3">註冊 / Register</h1>
            {{> message}}
            <form action="/users/register" method="POST">
                <div class="mb-3">
                    <label for="name" class="mb-2">姓名 / Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="{{ name }}">
                </div>
                <div class="mb-3">
                    <label for="account" class="mb-2">帳號 / Account</label>
                    <input type="account" id="account" name="account" class="form-control" placeholder="Enter Account"
                        value="{{ account }}">
                </div>
                <div class="mb-3">
                    <label for="password" class="mb-2">密碼 / Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Enter Password" value="{{ password }}">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="mb-2">密碼確認 / Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                        placeholder="Confirm Password" value="{{ confirmPassword }}">
                </div>
                <button type="submit" class="btn btn-primary btn-block">註冊 / Register</button>
                請妥善保存資訊
            </form>
            <p class="lead mt-4">
                已有帳號？ <a href="/users/login">登入 / Login</a>
            </p>
        </div>
    </div>
</div>